TELEGRAM_BOT_TOKEN=56754345:AFZgKKKHHHAAAAAAAAMjnS4m6_ZGqtPig
ALLOWED_USER_IDS=123456789

# Misaka Danmaku API必填配置
DANMAKU_API_BASE_URL=http://127.0.0.1:7768/api/control
DANMAKU_API_KEY=OxX2456323452345634534

# TMDB API配置（可选，用于辅助搜索和自动类型识别）
# 获取API密钥：https://www.themoviedb.org/settings/api
# 注意：系统会自动验证API密钥的有效性，无效密钥将被拒绝
TMDB_API_KEY=your_tmdb_api_key_here
# TMDB代理URL（可选，用于通过代理访问TMDB API）
# 如果设置了代理URL，系统将使用代理而不是官方API
TMDB_PROXY_URL=https://your-tmdb-proxy.com

# TVDB API配置（可选，用于TVDB链接解析和媒体信息获取）
# 获取API密钥：https://thetvdb.com/api-information
# 注意：系统会自动验证API密钥的有效性，无效密钥将被拒绝
TVDB_API_KEY=your_tvdb_api_key_here

# BGM (Bangumi) API配置（可选，用于BGM链接解析和媒体信息获取）
# 获取Access Token：https://next.bgm.tv/demo/access-token
# 注意：配置后将使用API方式获取数据，否则使用网页爬虫方式
BGM_ACCESS_TOKEN=your_bgm_access_token_here

# Webhook配置（可选，用于接收Emby等媒体服务器的通知）
# 监听端口，默认7769
WEBHOOK_PORT=7769
# Webhook API密钥，用于验证请求来源
WEBHOOK_API_KEY=自定义的Webhook

# Webhook回调通知配置（可选，用于在导入/刷新操作完成后发送通知）
# 启用回调通知功能（true/false，默认true）
WEBHOOK_CALLBACK_ENABLED=true
# 回调通知目标聊天ID（可选，如不配置则自动使用第一个管理员ID）
# WEBHOOK_CALLBACK_CHAT_ID=your_chat_id_here

# 可选：代理配置（Docker环境变量，容器级别代理）
# HTTP_PROXY=http://192.168.9.110:2083
# HTTPS_PROXY=http://192.168.9.110:2083
# NO_PROXY=localhost,127.0.0.1

# 可选：超时配置（单位：秒）
API_TIMEOUT=30
# Telegram连接超时（默认30秒，网络不稳定时可适当增加）
# TELEGRAM_CONNECT_TIMEOUT=30
# Telegram读取超时（默认30秒，网络不稳定时可适当增加）
# TELEGRAM_READ_TIMEOUT=30
# Telegram连接池超时（默认60秒，高并发时可适当增加）
# TELEGRAM_POOL_TIMEOUT=60
# Telegram连接池大小（默认50个连接，高并发时可适当增加）
# TELEGRAM_CONNECTION_POOL_SIZE=50

# 日志级别（DEBUG/INFO/WARNING，默认INFO）
LOG_LEVEL=INFO

# 时区配置（默认Asia/Shanghai）
# 用于webhook通知中的时间判断和日志记录
TZ=Asia/Shanghai

# 运行环境配置
# development: 开发环境，启用热重载功能
# production: 生产环境，禁用热重载，提高性能和稳定性
ENVIRONMENT=development